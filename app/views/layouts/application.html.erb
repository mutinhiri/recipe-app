<!DOCTYPE html>
<html>
  <head>
    <title>RecipeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="header">
      <a href="#default" class="logo">Recipe</a>
      <div class="header-right">
       <%= link_to 'Food', root_path, class: 'active' %>
       <%= link_to 'Inventory', inventories_path %>
       <%= link_to 'Recipe Food', recipes_path %>
       <%= link_to 'Public Recipes', public_recipes_path %>
        <% if current_user %>
        <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete} %>
        <% else %>
          <%= link_to 'signin', new_user_session_path %>
          <%= link_to 'signup',  new_user_registration_path %>
        <% end %>
      </div>
    </div>
  
    <%= yield %>
  </body>
</html>
