<div class="food-page">
  <h2> Foods </h2>
  <p id="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
    <div>
      <%= link_to 'Add Food', new_food_path, class: "add-food" %>
    </div>
    <table class="food-table">
      <thead class="food-table-head">
        <tr>
          <th>S/N</th>
          <th>Name</th>
          <th>Measurement Unit</th>
          <th>Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody class="food-table-body">
        <% @food.each_with_index do |food, index|%>
          <tr>
            <td><%= index+=1 %></td>
            <td><%= food.name %></td>
            <td><%= food.measurement_unit %></td>
            <td>$<%= food.price %></td>
            <td>
            <%= button_to "Delete", food, method: :delete, class: 'delete-btn btn' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
